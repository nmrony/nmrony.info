# Read the configuration.md to configure this script according to your need
#!/bin/bash

CURR_DIR=$(pwd);
CONTENT_DIR='.';
SITE_DIR=$CURR_DIR/$CONTENT_DIR;
echo 'Generating static page from ghost blog..' && \
buster generate --domain=http://blog.nmrony.docker --dir=$SITE_DIR > /dev/null 2>&1 && \
echo 'Fixing link...'
find $SITE_DIR -name "*.html" -print0 | xargs -0 sed -i'' -e 's#http://blog.nmrony.docker#http://www.nmrony.info#g' && \
cd $SITE_DIR && \
echo "Pulling latest changes..." && \
git pull --all -q > /dev/null 2>&1 && \
echo 'Generating sitemap...' && \
$SITE_DIR/node_modules/.bin/sitemap-generator www.nmrony.info > /dev/null 2>&1 && \
echo 'Correcting robot.txt' && \
bash -c 'cat > robots.txt <<RTEXT
User-agent: *
Disallow:

User-agent: Googlebot
Disallow: /cgi-bin/
Disallow: /backup/
Disallow: /ghost/

User-agent: Googlebot-Mobile
Disallow: /cgi-bin/
Disallow: /backup/
Disallow: /ghost/

User-agent: Googlebot-Image
Disallow: /cgi-bin/
Disallow: /backup/
Disallow: /ghost/

User-agent: Adsbot-Google
Disallow: /cgi-bin/
Disallow: /backup/
Disallow: /ghost/

User-agent: Slurp
Disallow: /cgi-bin/
Disallow: /backup/
Disallow: /ghost/

User-agent: msnbot
Disallow: /cgi-bin/
Disallow: /backup/
Disallow: /ghost/

User-agent: msnbot-media
Disallow: /cgi-bin/
Disallow: /backup/
Disallow: /ghost/

Sitemap: http://www.nmrony.info/sitemap.xml
RTEXT' > /dev/null 2>&1 && \
echo "Adding changes to stage..." && \
git add --all > /dev/null 2>&1 && \
echo 'Enter git commit message: ' && read COMMIT_MESSAGE && \
git commit -am "$COMMIT_MESSAGE" > /dev/null 2>&1 && \
git push -qfu origin master > /dev/null 2>&1 && \
echo 'Deploying your site. It may take some time' && \
git ftp push > /dev/null 2>&1 && \
cd $CURR_DIR && echo 'Your blog is successfully deployed';
